<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14cb0e">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Add/Edit Friend"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameFriend"
        android:layout_marginTop="20dp"
        android:text="Type username here"
        android:layout_gravity="center"
        android:background="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Send Language Type"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_gravity="center"/>

    <Spinner
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/sendLanguageType"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Receive Language Type"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="15sp"/>

    <Spinner
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/receiveLanguageType"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createFriend"
        android:text="Add Friend"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

</LinearLayout>