<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="#000000">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/espn"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_below="@+id/imageView"
        android:id="@+id/firstandten"
        android:paddingBottom="50dp"
        android:src="@drawable/logo"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/UsernameText"
        android:background="#FFFFFF"

        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usernameInput"
        android:background="#FFFFFF"
        android:layout_alignBottom="@+id/UsernameText"
        android:layout_alignTop="@+id/UsernameText"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UsernameText"
        android:text="@string/Username"
        android:textColor="#ff000e"
        android:layout_below="@+id/firstandten"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:background="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordText"
        android:text="@string/password"
        android:textColor="#ff000e"
        android:background="#000000"
        android:layout_below="@id/UsernameText"
        android:layout_alignBaseline="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:layout_alignEnd="@+id/UsernameText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:layout_below="@id/password"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:id="@+id/signButton"/>


</RelativeLayout>
